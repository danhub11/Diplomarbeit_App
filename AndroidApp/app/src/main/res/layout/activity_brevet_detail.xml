<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:padding="24dp"
    tools:context=".BrevetDetailActivity">

    <!-- Bildschirm-Titel -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/brevet_title"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/color_on_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Stadt -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivHeart"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        tools:text="Mödling"/>

    <!-- Herz-Toggle -->
    <ImageView
        android:id="@+id/ivHeart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/heart_toggle"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/check_in"
        app:layout_constraintTop_toTopOf="@id/chipStatus"
        app:layout_constraintBottom_toBottomOf="@id/chipStatus"
        app:layout_constraintEnd_toStartOf="@id/chipStatus"
        android:layout_marginEnd="8dp"/>

    <!-- Status-Chip -->
    <com.google.android.material.chip.Chip
        android:id="@+id/chipStatus"
        style="@style/Widget.Material3.Chip.Suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvCity"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Aktiv"/>

    <!-- Datum -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_date"
        android:textStyle="bold"
        android:textColor="@color/color_on_background"
        app:layout_constraintTop_toBottomOf="@id/tvCity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_on_background"
        app:layout_constraintBaseline_toBaselineOf="@id/labelDate"
        app:layout_constraintStart_toEndOf="@id/labelDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="25. Mai 2024"/>

    <!-- Distanz -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_distance"
        android:textStyle="bold"
        android:textColor="@color/color_on_background"
        app:layout_constraintTop_toBottomOf="@id/labelDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_on_background"
        app:layout_constraintBaseline_toBaselineOf="@id/labelDistance"
        app:layout_constraintStart_toEndOf="@id/labelDistance"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="300 km"/>

    <!-- Optional: Beschreibung -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_on_background"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@id/labelDistance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:text="Startzeit, Veranstalter, Startort …"/>

    <!-- NEU: Jetzt anmelden -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_register"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- DNS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_dns"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
